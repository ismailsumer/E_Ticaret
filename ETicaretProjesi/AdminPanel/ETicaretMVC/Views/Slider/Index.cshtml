@model List<AdminPanel.ETicaretMVC.Models.DTOs.SliderViewDto>

<h2 class="mb-4">üñºÔ∏è Slider Y√∂netimi</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">‚ûï Yeni Slider Ekle</a>
</div>

<div class="row g-3">
    @if (Model.Any())
    {
        @foreach (var s in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(s.ImageUrl))
                    {
                        <img src="@($"{ViewBag.ApiBaseUrl?.ToString().TrimEnd('/')?.Replace("/api/","")}{s.ImageUrl}")" 
                             class="card-img-top" style="height:180px; object-fit:cover;" alt="@s.Title"
                             onerror="this.src='https://via.placeholder.com/400x180?text=Resim+Yok'" />
                    }
                    else
                    {
                        <div class="bg-light text-center py-5 text-muted">Resim Yok</div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@s.Title</h5>
                        <p class="card-text text-muted small">@s.Description</p>
                        <p class="mb-1"><small>Sƒ±ra: @s.DisplayOrder</small></p>
                        <p>
                            @if (s.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Bu slider\'ƒ± silmek istediƒüinize emin misiniz?');">
                            <input type="hidden" name="id" value="@s.Id" />
                            <button type="submit" class="btn btn-sm btn-danger w-100">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">Hen√ºz slider eklenmemi≈ü.</div>
        </div>
    }
</div>
