                            <th>Adet</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>@((item.Price * item.Quantity).ToString("C2", new System.Globalization.CultureInfo("tr-TR")))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3" class="text-end">Genel Toplam:</td>
                            <td>@Model.TotalPrice.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
