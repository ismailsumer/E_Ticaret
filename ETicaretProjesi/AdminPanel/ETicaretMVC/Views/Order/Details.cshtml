                    <span class="badge bg-info">@Model.Status</span>
                </p>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">Durum G√ºncelle</div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <select name="status" class="form-select">
                            <option value="Beklemede" selected="@(Model.Status == "Beklemede")">Beklemede</option>
                            <option value="Hazƒ±rlanƒ±yor" selected="@(Model.Status == "Hazƒ±rlanƒ±yor")">Hazƒ±rlanƒ±yor</option>
                            <option value="Kargoda" selected="@(Model.Status == "Kargoda")">Kargoda</option>
                            <option value="Teslim Edildi" selected="@(Model.Status == "Teslim Edildi")">Teslim Edildi</option>
                            <option value="ƒ∞ptal Edildi" selected="@(Model.Status == "ƒ∞ptal Edildi")">ƒ∞ptal Edildi</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-warning w-100">G√ºncelle</button>
