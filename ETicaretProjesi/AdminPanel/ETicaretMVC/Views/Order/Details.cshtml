@model AdminPanel.ETicaretMVC.Models.DTOs.OrderViewDto

<h2 class="mb-4">üìã Sipari≈ü Detay ‚Äî #@Model.Id</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white">Sipari≈ü Kalemleri</div>
            <div class="card-body">
